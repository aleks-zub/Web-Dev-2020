
<div class="container">
    
    <div class="jumbotron">
        <div class="container">
            <h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
        </div>
    </div>
    
     <div class="row">
         <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table id="announsTable" class="table table-bordered table-hover">
                   <thead>
                      <tr>
                          <th>Дата регистрации</th>
                          <th>Дата обновления</th>
                          <th>Тема</th>
                          <th>Объявление</th>
                          <th>Автор</th>
                          <th>Действия</th>
                      </tr>
                    </thead>
                    <tbody>
                    </tbody>
              </table>
         </div>
     </div>
</div>


<div class="modal fade" id="editModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Редактирование объявлений</h4>
            </div>
            <div class="modal-body">
                <form>
                     <div class="form-group">
                       <label for="date_of_registr">Дата регистрации</label>
                       <input type="text" class="form-control" id="date_of_registr" placeholder="Input field">
                     </div>
                     <div class="form-group">
                       <label for="date_of_update">Дата обновления</label>
                       <input type="text" class="form-control" id="date_of_update" placeholder="Input field">
                     </div>
                     <div class="form-group">
                       <label for="tit">Тема</label>
                       <textarea type="text" class="form-control" id="tit" placeholder="Input field"></textarea>
                     </div>
               <div class="form-group">
                       <label for="artic">Объявление</label>
                       <input type="text" class="form-control" id="artic" placeholder="Input field">
                   </div>
                   <div class="form-group">
                       <label for="author">Автор</label>
                       <textarea type="text" class="form-control" id="author" placeholder="Input field"></textarea>
                     </div>
                 </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="announSave">Сохранить</button>
            </div>
        </div>
    </div>
</div>

